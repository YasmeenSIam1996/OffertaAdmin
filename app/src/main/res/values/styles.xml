<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/din_next_arabic_regular</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />



    <style name="BackIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="TextStyleTable">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/TableTextSize</item>
        <item name="android:layout_marginTop">@dimen/textMarginVerTable</item>
        <item name="android:layout_marginBottom">@dimen/textMarginVerTable</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LineHorStyle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#D0D4D9</item>
    </style>

    <style name="ItemTextTableStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/ItemColorTextTable</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/textMarginVerTable</item>
        <item name="android:layout_marginBottom">@dimen/textMarginVerTable</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/TableTextSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="TvCloseDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/close_dialog_bg</item>
        <item name="android:drawableStart">@drawable/ic_close_dialog</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingRight">11dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LayoutDateStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/tvFrom</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="TextDateStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">#242424</item>
        <item name="android:textSize">@dimen/dialogTextSize</item>
    </style>

    <style name="ItemUserDataStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginEnd">@dimen/marginItemUserData</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="UserDataTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/userDataTitleColor</item>
        <item name="android:textSize">@dimen/userDataTextSize</item>
    </style>

    <style name="UserDataSubTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/userDataSubTitleColor</item>
        <item name="android:textSize">@dimen/userDataTextSize</item>
    </style>

    <style name="DividerStyleOrderDetails">
        <item name="android:layout_marginStart">@dimen/marginUserDataHor</item>
        <item name="android:layout_marginEnd">@dimen/marginUserDataHor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/marginDivider</item>
        <item name="android:layout_marginBottom">@dimen/marginDivider</item>
        <item name="android:background">@color/dividerGreyOrderDetails</item>
        <item name="android:layout_height">0.77dp</item>
    </style>

    <style name="TextValueStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">@dimen/marginTextValueHor</item>
        <item name="android:textColor">@color/textColorOrderDetails</item>
    </style>

    <style name="OrderDetailsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textColor">@color/textColorOrderDetails</item>
    </style>


    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:fontFamily">@font/din_next_arabic_regular</item>
    </style>

</resources>
